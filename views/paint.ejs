<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Painter</title>

    <link rel="stylesheet" href="/public/stylesheets/style_paint.css" type="text/css">


    <script src="https://cdn.jsdelivr.net/npm/p5@1.1.9/lib/p5.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="https://d3js.org/d3.v6.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>

</head>
<body>
      <div class="modal" id="modal">
        <div class="contenido">
          <img src="/public/img/giro.png" alt="" width="50%" height="auto">
        </div>
      </div>

    <div id = "uContainer" class="uContainer animate__animated animate__fadeIn animate__delay-1s" >
        <div class="contUCanvas">
            <div class="uCanvas" id="uCanvas">

            </div>
        </div>

        <div class="uUI" id="uUI">
          <div class="botones">
            <div class="botones-1">
              <a href="https://niunamenos.herokuapp.com/"><img src="\public\img\home.png" alt="home" width="30px" height="auto"> </a>
            </div>
            <div class="botones-2">
              <a href="javascript:window.location.href=window.location.href"> <img src="\public\img\close.png" alt="reload" width="30px" height="auto"> </a>
            </div>
          </div>
            <div class="colors" id="colors">
                <div  class="color c1"></div>
                <div  class="color c2"></div>
                <div  class="color c1"></div>
                <div  class="color c2"></div>
                <div  class="color c1"></div>
                <div  class="color c2"></div>
                <div  class="color c1"></div>
                <div  class="color c2"></div>
                <div  class="color c1"></div>
                <div  class="color c2"></div>
                <div  class="color c1"></div>
                <div  class="color c2"></div>
            </div>
            <div class="uBrush" id="uBrush" >
                <svg>
                    <circle class="circle1" id="circle1" cx="0" cy="0" r="10"></circle>
                    <circle class="circle2" id="circle2" cx="0" cy="0" r="10"></circle>
                </svg>
            </div>
            <div class="brushSlider" id="brushSlider" >
                <input type="range" class="brushScale" id="brushScale" name="brushScale" min="10" max="40">
            </div>
            <div class="sendButton" id="sendButton">
                <input id="sendCanvas" type="button" value="DESCARGAR"/>
            </div>
        </div>
    </div>


    <script src="/public/js/paint_tool.js"></script>



     <p style="display:none;" id="p5_loading"></p>

</body>

</html>
